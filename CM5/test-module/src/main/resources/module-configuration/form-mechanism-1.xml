<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config"
               xmlns:act="https://cm5.intertrust.ru/config/action">
    <!-- Test 1 - direct references 1:1 -->
    <domain-object-type name="a1">
        <fields>
            <string name="name1" length="128" not-null="true"/>
            <string name="name2" length="128"/>
            <reference name="b1" type="b1" not-null="true"/>
        </fields>
        <uniqueKey>
            <field name="name1"/>
        </uniqueKey>
    </domain-object-type>

    <domain-object-type name="b1">
        <fields>
            <string name="name1" length="128" not-null="true"/>
            <string name="name2" length="128"/>
            <reference name="c1" type="c1" not-null="true"/>
        </fields>
        <uniqueKey>
            <field name="name1"/>
        </uniqueKey>
    </domain-object-type>

    <domain-object-type name="c1">
        <fields>
            <string name="name1" length="128" not-null="true"/>
            <string name="name2" length="128"/>
            <reference name="d1" type="d1" not-null="true"/>
        </fields>
        <uniqueKey>
            <field name="name1"/>
        </uniqueKey>
    </domain-object-type>

    <domain-object-type name="d1">
        <fields>
            <string name="name1" length="128" not-null="true"/>
            <string name="name2" length="128"/>
        </fields>
        <uniqueKey>
            <field name="name1"/>
        </uniqueKey>
    </domain-object-type>

    <form name="a1_form" domain-object-type="a1" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td width="100px" h-align="righ">
                            <widget id="a_name1_label"/>
                        </td>
                        <td width="100%" h-align="left">
                            <widget id="a_name1"/>
                        </td>
                    </tr>
                </table>
            </header>
            <body display-single-tab="false">
                <tab name="Главная">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="a_name2_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="a_name2"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td h-align="right">
                                        <widget id="b_name1_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="b_name1"/>
                                    </td>
                                    <td h-align="right">
                                        <widget id="b_name2_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="b_name2"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td h-align="right">
                                        <widget id="c_name1_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="c_name1"/>
                                    </td>
                                    <td h-align="right">
                                        <widget id="c_name2_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="c_name2"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td h-align="right">
                                        <widget id="d_name1_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="d_name1"/>
                                    </td>
                                    <td h-align="right">
                                        <widget id="d_name2_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="d_name2"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>
            <label id="b_name1_label">
                <field-path/>
                <text>B. Name 1:</text>
            </label>
            <text-box id="b_name1">
                <field-path value="b1.name1"/>
            </text-box>
            <label id="b_name2_label">
                <field-path/>
                <text>B. Name 2:</text>
            </label>
            <text-box id="b_name2">
                <field-path value="b1.name2"/>
            </text-box>

            <label id="d_name1_label">
                <field-path/>
                <text>D. Name 1:</text>
            </label>
            <text-box id="d_name1">
                <field-path value="b1.c1.d1.name1"/>
            </text-box>
            <label id="d_name2_label">
                <field-path/>
                <text>D. Name 2:</text>
            </label>
            <text-box id="d_name2">
                <field-path value="b1.c1.d1.name2"/>
            </text-box>

            <label id="a_name1_label">
                <field-path/>
                <text>A. Name 1:</text>
            </label>
            <text-box id="a_name1">
                <field-path value="name1"/>
            </text-box>
            <label id="a_name2_label">
                <field-path/>
                <text>A. Name 2:</text>
            </label>
            <text-box id="a_name2">
                <field-path value="name2"/>
            </text-box>

            <label id="c_name1_label">
                <field-path/>
                <text>C. Name 1:</text>
            </label>
            <text-box id="c_name1">
                <field-path value="b1.c1.name1"/>
            </text-box>
            <label id="c_name2_label">
                <field-path/>
                <text>C. Name 2:</text>
            </label>
            <text-box id="c_name2">
                <field-path value="b1.c1.name2"/>
            </text-box>
        </widget-config>
    </form>

    <collection name="a1_collection" idField="id">
        <prototype>
            <![CDATA[
                select a1.id, a1.name1 a_name1, a1.name2 a_name2, b1.name1 b_name1, b1.name2 b_name2, c1.name1 c_name1, c1.name2 c_name2, d1.name1 d_name1, d1.name2 d_name2
                from a1
                left outer join b1 on a1.b1 = b1.id
                left outer join c1 on b1.c1 = c1.id
                left outer join d1 on c1.d1 = d1.id

                where
                    1=1 ::where-clause
            ]]>
        </prototype>
        <!-- если запрос-счётчик отсутствует, то в select подставляется count(*) вместо названий колонок -->
        <counting-prototype>
            select count(*) from country co ::from-clause WHERE 1=1 ::where-clause
        </counting-prototype>
    </collection>

    <collection-view name="a1_collection_default_view" collection="a1_collection" is-default="true">
        <display>
            <column field="id" name="id" type="integer" sortable="false" max-width="250px" text-break-style="cut"/>
            <column field="a_name1" name="a_name1" editable="false" type="string" sortable="true" min-width="50px" text-break-style="cut"/>
            <column field="a_name2" name="a_name2" editable="false" type="string" sortable="true" min-width="50px" text-break-style="cut"/>
            <column field="b_name1" name="b_name1" editable="false" type="string" sortable="true" min-width="50px" text-break-style="cut"/>
            <column field="b_name2" name="b_name2" editable="false" type="string" sortable="true" min-width="50px" text-break-style="cut"/>
            <column field="c_name1" name="c_name1" editable="false" type="string" sortable="true" min-width="50px" text-break-style="cut"/>
            <column field="c_name2" name="c_name2" editable="false" type="string" sortable="true" min-width="50px" text-break-style="cut"/>
            <column field="d_name1" name="d_name1" editable="false" type="string" sortable="true" min-width="50px" text-break-style="cut"/>
            <column field="d_name2" name="d_name2" editable="false" type="string" sortable="true" min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>
</configuration>