            <reference name="a_person" type="person"/>
        </fields>
        <uniqueKey>
            <field name="name1"/>
        </uniqueKey>
    </domain-object-type>

    <domain-object-type name="f1">
        <fields>
            <string name="name1" length="128" not-null="true"/>
            <string name="name2" length="128"/>
        </fields>
        <uniqueKey>
