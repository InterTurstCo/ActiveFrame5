<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">
    <form name="extendedsearch_form" domain-object-type="Employee" type="search" debug="false" min-width="500px" is-default = "true">
        <markup>
            <header>
            </header>
            <body display-single-tab="false">
                <tab name="Главная"> <!-- закладка состоит из групп с разметкой -->
                    <single-entry-group> <!-- наследник от TabGroupsConfig -->
                        <tab-group> <!-- вхождение в группу уже может содержать разметку -->
                            <table>
                                <tr>
                                    <!-- label (Имя) -->
                                    <td>
                                        <widget id="1"/>
                                    </td>
                                    <!-- text-box (Значение Имени) -->
                                    <td>
                                        <widget id="2"/>
                                    </td>
                                </tr>
                                <!-- label (Фамилия) -->
                                <tr>
                                    <td>
                                        <widget id="3"/>
                                    </td>
                                    <!-- text-box (Значение Фамилии) -->
                                    <td>
                                        <widget id="4"/>
                                    </td>
                                </tr>
                                <tr>
                                    <!-- label (Емэйл) -->
                                    <td>
                                        <widget id="5"/>
                                    </td>
                                    <!-- text-box (Значение Емэйла) -->
                                    <td>
                                        <widget id="6"/>
                                    </td>
                                </tr>
                                <tr>
                                    <!-- label (Должность) -->
                                    <td>
                                        <widget id="7"/>
                                    </td>
                                    <!-- text-box (Значение Должности) -->
                                    <td>
                                        <widget id="8"/>
                                    </td>
                                </tr>
                                <tr>
                                    <!-- label (Департамент) -->
                                    <td>
                                        <widget id="9"/>
                                    </td>
                                    <!-- Combo-box (Список департаментов) -->
                                    <td>
                                        <widget id="10"/>
                                    </td>
                                </tr>

                                <!--<tr>
                                    &lt;!&ndash; label (Организация) &ndash;&gt;
                                    <td>
                                        <widget id="11"/>
                                    </td>
                                    &lt;!&ndash; combo-box &ndash;&gt;
                                    <td>
                                        <widget id="12"/>
                                    </td>
                                </tr>-->
                                <!-- (Искать везде) -->
<!--
                                <tr>
                                    <td>
                                        <widget id="13"/>
                                    </td>
                                    <td>
                                        <widget id="14"/>
                                    </td>
                                </tr>
-->
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>
            <!-- label (Имя) -->
            <label id="1">
                <text>Имя:</text>
            </label>
            <text-box id="2">
                <field-path value="FirstName"/>
            </text-box>
            <!--<list-box id="2">
                <field-path value="city^country"/>
                <pattern value="{name}"/>
                <single-choice value="false"/>
            </list-box>-->
            <!-- label (Фамилия) -->
            <label id="3">
                <text>Фамилия:</text>
            </label>
            <text-box id="4">
                <field-path value="LastName"/>
            </text-box>
            <!-- label (Email) -->
            <label id="5">
                <text>Email:</text>
            </label>
            <text-box id="6">
                <field-path value="EMail"/>
            </text-box>
            <!-- label (Должность) -->
            <label id="7">
                <text>Должность:</text>
            </label>
            <text-box id="8">
                <field-path value="Position"/>
            </text-box>
            <!-- label (Департамент) -->
            <label id="9">
                <text>Департамент:</text>
            </label>
            <combo-box id="10">
                <field-path value="Department"/>
                <pattern value="{Name}"/>
            </combo-box>

            <!--Department_Name, Organization-->
            <!--<label id="11">
                <text>Организация:</text>
            </label>
            <combo-box id="12">
                <field-path value="Organization"/>
                <pattern value="{Name}"/>
            </combo-box>-->
            <!-- label (Искать везде - по умолчанию это поле д.б. во всех формах) -->
            <!--
            <label id="11">
                <text>Искать везде:</text>
            </label>
            <text-box id="12">
                <field-path value="SearchFilter.EVERYWHERE"/>
            </text-box>
            временно закомментировано -->
        </widget-config>
    </form>
    <form-mappings name="extendedsearch_mappings">
        <form-mapping domain-object-type="Employee" form="extendedsearch_form">
            <users>
                <user uid="admin"/>
            </users>
            <roles>
                <role name="Minister"/>
            </roles>
        </form-mapping>
    </form-mappings>
</configuration>