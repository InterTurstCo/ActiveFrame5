<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<configuration xmlns="https://cm5.intertrust.ru/config"
               xmlns:act="https://cm5.intertrust.ru/config/action">

    <act:action-entry id="aToggleSize" componentName="size.toggle.action" display="toggleButton"
                        text="Распахнуть/Свернуть" image="icons/form-fullsize.png" tooltip="Распахнуть/Свернуть окно"
                        merged="true" order="100" dirtySensitivity="false"/>
    <act:action-entry id="aFavorites" componentName="favorite.toggle.action" display="toggleButton"
                        text="Избранное" image="icons/favorite-panel.png" tooltip="Показать/Скрыть избранное"
                        merged="true" order="200" dirtySensitivity="false"/>
    <act:action-entry id="aRefresh" componentName="refresh.action" text="Обновить" tooltip="Обновить данные"
                        order="100"/>
    <act:action-entry id="aCreateAction" componentName="action.group"
                        text="Создать" merged="true" order="300" dirtySensitivity="false"/>

    <act:tool-bar plugin="collection.plugin">
        <act:action-ref actionId="aRefresh"/>
        <act:action-separator order="200"/>
    </act:tool-bar>

    <act:tool-bar plugin="form.plugin">
        <act:action-ref actionId="aCreateAction"/>
        <act:facet name="right">
            <act:action-ref actionId="aToggleSize" showText="false"/>
            <act:action-ref actionId="aFavorites" showText="false"/>
        </act:facet>

    </act:tool-bar>
</configuration>
