<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <form name="hp_organization_form" domain-object-type="hp_organization" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td>
                            <widget id="header"/>
                        </td>
                    </tr>
                </table>
            </header>
            <body display-single-tab="true">
                <tab name="Данные организации">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td>
                                        <widget id="orgNameLabel"/>
                                    </td>
                                    <td>
                                        <widget id="orgName"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>
            <label id="header">
                <text>Заголовок. Форма Организации</text>
            </label>
            <label id="orgNameLabel">
                <text>Наименование</text>
            </label>
            <text-box id="orgName">
                <field-path value="name"/>
            </text-box>
        </widget-config>
    </form>

    <form name="hp_departments_form" domain-object-type="hp_departments" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td>
                            <widget id="header"/>
                        </td>
                    </tr>
                </table>
            </header>
            <body display-single-tab="true">
                <tab name="Данные подразделения">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td>
                                        <widget id="depNameLabel"/>
                                    </td>
                                    <td>
                                        <widget id="depName"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <widget id="orgNameLabel"/>
                                    </td>
                                    <td>
                                        <widget id="orgName"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <widget id="hidepNameLabel"/>
                                    </td>
                                    <td>
                                        <widget id="hidepName"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>
            <label id="header">
                <text>Заголовок. Форма подразделения</text>
            </label>

            <label id="depNameLabel">
                <text>Наименование</text>
            </label>
            <text-box id="depName" read-only="true">
                <field-path value="name"/>
            </text-box>

            <label id="orgNameLabel">
                <text>Организация</text>
            </label>
            <text-box id="orgName" read-only="true">
                <field-path value="organization.name"/>
            </text-box>

            <label id="hidepNameLabel">
                <text>Вышестоящее подразделение</text>
            </label>
            <text-box id="hidepName" read-only="true">
                <field-path value="parent_department.name"/>
            </text-box>

        </widget-config>
    </form>

    <form name="hp_dep_position_form" domain-object-type="hp_dep_position" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td>
                            <widget id="header"/>
                        </td>
                    </tr>
                </table>
            </header>
            <body display-single-tab="true">
                <tab name="Данные штатной должности">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td>
                                        <widget id="posNameLabel"/>
                                    </td>
                                    <td>
                                        <widget id="posName"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <widget id="depNameLabel"/>
                                    </td>
                                    <td>
                                        <widget id="depName"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>
            <label id="header">
                <text>Заголовок. Форма штатной должности</text>
            </label>
            <label id="posNameLabel">
                <text>Наименование</text>
            </label>
            <text-box id="posName" read-only="true">
                <field-path value="name"/>
            </text-box>

            <label id="depNameLabel">
                <text>Подразделение</text>
            </label>
            <text-box id="depName" read-only="true">
                <field-path value="department.name"/>
            </text-box>

        </widget-config>
    </form>

    <form name="hp_rvz_form" domain-object-type="hp_rvz" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td>
                            <widget id="header"/>
                        </td>
                    </tr>
                </table>
            </header>
            <body display-single-tab="true">
                <tab name="Данные РВЗ">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td>
                                        <widget id="firstNameLabel"/>
                                    </td>
                                    <td>
                                        <widget id="firstName"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <widget id="lastNameLabel"/>
                                    </td>
                                    <td>
                                        <widget id="lastName"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <widget id="orgLabel"/>
                                    </td>
                                    <td>
                                        <widget id="orgName"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>
            <label id="header">
                <text>Заголовок. Форма РВЗ</text>
            </label>

            <label id="firstNameLabel">
                <text>Имя</text>
            </label>
            <text-box id="firstName" read-only="true">
                <field-path value="first_name"/>
            </text-box>

            <label id="lastNameLabel">
                <text>Фамилия</text>
            </label>
            <text-box id="lastName" read-only="true">
                <field-path value="last_name"/>
            </text-box>

            <label id="orgLabel">
                <text>Организация</text>
            </label>
            <text-box id="orgName" read-only="true">
                <field-path value="organization.name"/>
            </text-box>

        </widget-config>
    </form>

    <form name="hp_org_addresses_form" domain-object-type="hp_org_addresses" is-default="true" default-value-setter="hpaddress.value.setter">
        <markup>
            <header>
                <table>
                    <tr>
                        <td>
                            <widget id="header"/>
                        </td>
                    </tr>
                </table>
            </header>
            <body display-single-tab="true">
                <tab name="Данные адреса">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td>
                                        <widget id="cityLabel"/>
                                    </td>
                                    <td>
                                        <widget id="city"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <widget id="streetLabel"/>
                                    </td>
                                    <td>
                                        <widget id="street"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <widget id="indexLabel"/>
                                    </td>
                                    <td>
                                        <widget id="index"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <widget id="buildingLabel"/>
                                    </td>
                                    <td>
                                        <widget id="building"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <widget id="orgLabel"/>
                                    </td>
                                    <td>
                                        <widget id="org"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>
            <label id="header">
                <text>Заголовок. Форма адреса</text>
            </label>

            <label id="cityLabel">
                <text>Город</text>
            </label>
            <text-box id="city">
                <field-path value="city"/>
            </text-box>

            <label id="streetLabel">
                <text>Улица</text>
            </label>
            <text-box id="street">
                <field-path value="street"/>
            </text-box>

            <label id="indexLabel">
                <text>Индекс</text>
            </label>
            <text-box id="index">
                <field-path value="index"/>
            </text-box>

            <label id="buildingLabel">
                <text>Номер дома</text>
            </label>
            <text-box id="building">
                <field-path value="building"/>
            </text-box>

            <label id="orgLabel">
                <text>Организация</text>
            </label>
            <suggest-box id="org">
                <field-path value="organization"/>
                <collection-ref name="c_hp_organizations"/>
                <drop-down-pattern value="{name}"/>
                <selection-pattern value="{name}"/>
                <input-text-filter name="byName"/>
                <page-size>30</page-size>
                <selection-style name="inline"/>
                <single-choice value="true"/>
            </suggest-box>
        </widget-config>
    </form>

    <form name="hp_pos_appointments_form" domain-object-type="hp_pos_appointments" is-default="true">
        <markup>
            <header>
                <table>
                    <tr>
                        <td>
                            <widget id="header"/>
                        </td>
                    </tr>
                </table>
            </header>
            <body display-single-tab="true">
                <tab name="Данные назначения">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td>
                                        <widget id="firstLabel"/>
                                    </td>
                                    <td>
                                        <widget id="first"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <widget id="lastLabel"/>
                                    </td>
                                    <td>
                                        <widget id="last"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <widget id="appDateLabel"/>
                                    </td>
                                    <td>
                                        <widget id="appDate"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <widget id="posLabel"/>
                                    </td>
                                    <td>
                                        <widget id="position"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>
            <label id="header">
                <text>Заголовок. Форма Назначения</text>
            </label>

            <label id="firstLabel">
                <text>Имя</text>
            </label>
            <text-box id="first" read-only="true">
                <field-path value="first_name"/>
            </text-box>

            <label id="lastLabel">
                <text>Фамилия</text>
            </label>
            <text-box id="last" read-only="true">
                <field-path value="last_name"/>
            </text-box>

            <label id="appDateLabel">
                <text>Дата назначения</text>
            </label>
            <date-box id="appDate" read-only="true">
                <field-path value="appdate"/>
            </date-box>

            <label id="posLabel">
                <text>Должность</text>
            </label>
            <text-box id="position" read-only="true">
                <field-path value="position.name"/>
            </text-box>

        </widget-config>
    </form>

</configuration>