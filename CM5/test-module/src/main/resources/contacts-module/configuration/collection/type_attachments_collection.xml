<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!-- Коллекция для типов Приложений -->
    <collection name="cont_type_attachments_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                  t.id,
                  t.title,
                  t.uid
                FROM
                  cont_type_attachments t
                  ::from-clause
                where
                    1=1 ::where-clause
            ]]>
        </prototype>
        <counting-prototype>
            select count(*) from cont_type_attachments t ::from-clause WHERE 1=1 ::where-clause
        </counting-prototype>

        <filter name="byTitle">
            <criteria placeholder="where-clause">
                <![CDATA[
                    lower(t.title) like lower({0})
                ]]>
            </criteria>
        </filter>
        <filter name="byUid">
            <criteria placeholder="where-clause">
                <![CDATA[
                    lower(t.uid) like lower({0})
                ]]>
            </criteria>
        </filter>
    </collection>

    <collection-view name="cont_type_attachments_collection_view" collection="cont_type_attachments_collection" is-default="true">
        <display>
            <column field="title" name="Заголовок" type="string" sortable="true" resizable="true" search-filter="byTitle"/>
            <column field="uid" name="Уникальный идентификатор" type="string" sortable="true" resizable="true" search-filter="byUid"/>
        </display>
    </collection-view>
</configuration>