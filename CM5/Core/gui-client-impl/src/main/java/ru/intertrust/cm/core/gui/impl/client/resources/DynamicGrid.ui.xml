<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:ru.intertrust.cmj.client.component.grid.view">
	
	<ui:style> /** Table Header */ .docs-ctg-listContainerHeader { color:
		black; margin: 10px; font-size: 12px; font-style: italic; font-weight:
		normal; } .scrollable { /*border: 1px solid #ccc;*/ text-align: left;
		padding-left: 5px; } 
	</ui:style>
	
	<g:LayoutPanel ui:field="root">
		<g:layer>
			<g:HTMLPanel ui:field="dynamic">
				<h3 class="{style.docs-ctg-listContainerHeader}">
					<g:Label ui:field="rootPathView" />
				</h3>
				<g:FlowPanel ui:field="headerPanel" />
				<c:ScrollController ui:field="scrollController" />
			</g:HTMLPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>