   <collection name="Employees" idField="id">
      <prototype><![CDATA[
            
                select
                    e.id, e.type_id, e.name, e.position
                from
                    employee e
                     ::from-clause
                where
                    1=1 ::where-clause
            
        ]]></prototype>
      <counting-prototype><![CDATA[
            select count(*) from employee e ::from-clause WHERE 1=1 ::where-clause
        ]]></counting-prototype>
      <filter name="byDepartment">
         <reference placeholder="from-clause"><![CDATA[
                 
                    inner join department d on e.department = d.id
                
            ]]></reference>
         <criteria placeholder="where-clause"><![CDATA[
                
                    d.name = {0}
                
            ]]></criteria>
      </filter>
      <filter name="byDepartmentNames">
         <reference placeholder="from-clause"><![CDATA[
                 
                    inner join department d on e.department = d.id
                
            ]]></reference>
         <criteria placeholder="where-clause"><![CDATA[
                
                    d.name in ({0})
                
            ]]></criteria>
      </filter>
      <filter name="byName">
         <criteria placeholder="where-clause"><![CDATA[
                
                    e.name = {0}
                
            ]]></criteria>
      </filter>
   </collection>
   <collection name="Employees_2" idField="id">
      <filter name="byName"/>
      <filter name="byDepartment"/>
      <renderer className="ru.intertrust.cm.core.business.impl.EmployeesCollectionRenderer"/>
   </collection>
