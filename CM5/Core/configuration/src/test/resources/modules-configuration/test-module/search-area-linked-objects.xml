                    <doel>PublishDocOrgs.orig_shortname</doel>
                </indexed-field>
                <parent-link>
                    <doel>Owner</doel>
                </parent-link>
            </linked-domain-object>

            <target-collection name="(search)"/>
        </target-domain-object>
    </search-area>
</configuration>