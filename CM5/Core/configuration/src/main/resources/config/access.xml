    <!-- Контекстные роли -->
    <context-role name="DocumentAuthor">
        <context>
            <domain-object type="Outgoing_Document" />
        </context>
        <groups>
            <track-domain-objects>
                <get-group name="PersonAndDelegates">
                    <doel>Author</doel>
