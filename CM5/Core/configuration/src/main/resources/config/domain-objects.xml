        </fields>
        <uniqueKey>
            <field name="code"/>
        </uniqueKey>
    </domain-object-type>
    <domain-object-type name="sel_subject" audit-log="false"/>
    <domain-object-type name="sel_object" audit-log="false"/>

    <domain-object-type name="sel_subj_user" extends="sel_subject" audit-log="false">
