<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="springApplicationContext" class="ru.intertrust.cm.core.util.SpringApplicationContext"/>

    <bean id="configurationSerializer" depends-on="topLevelConfigurationCacheInitializer"
          class="ru.intertrust.cm.core.config.ConfigurationSerializer"
          p:coreConfigurationSchemaFilePath="config/configuration.xsd"
          p:modulesConfigurationSchemaPath="config/modules-configuration.xsd"
          p:modulesConfigurationFolder="modules-configuration"
          p:modulesConfigurationPath="/modules-configuration.xml">
        <property name="coreConfigurationFilePaths">
            <set>
                <value>config/system-domain-objects.xml</value>
                <value>config/domain-objects.xml</value>
                <value>config/collections.xml</value>
                <value>config/collection-views.xml</value>
                <value>config/access.xml</value>
                <value>config/navigation-panel.xml</value>
            </set>
        </property>
    </bean>

    <bean id="configurationExplorer"
          class="ru.intertrust.cm.core.config.ConfigurationExplorerImpl"
          init-method="validateGui">
        <constructor-arg>
            <bean class="ru.intertrust.cm.core.config.model.base.Configuration"
                  factory-bean="configurationSerializer" factory-method="deserializeConfiguration"/>
        </constructor-arg>
    </bean>

    <bean id="topLevelConfigurationCacheInitializer"
          class="ru.intertrust.cm.core.config.TopLevelConfigurationCacheInitializer" init-method="init"/>

    <bean id="formLogicalValidator"
          class="ru.intertrust.cm.core.config.FormLogicalValidator"/>

    <bean id="navigationPanelLogicalValidator"
          class="ru.intertrust.cm.core.config.NavigationPanelLogicalValidator"/>


</beans>