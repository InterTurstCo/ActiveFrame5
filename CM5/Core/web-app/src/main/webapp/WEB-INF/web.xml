<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>Business Universe</display-name>

    <session-config>
        <session-timeout>30</session-timeout> <!-- minutes -->
    </session-config>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <security-constraint>
        <display-name>Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>The whole web</web-resource-name>
            <description>Protect everything in our applications</description>
            <url-pattern>/*/BusinessUniverseService</url-pattern>
            <url-pattern>/cm-sochi/*</url-pattern>
            <url-pattern>/welcome/*</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <filter>
        <display-name>LoginFilter</display-name>
        <filter-name>LoginFilter</filter-name>
        <filter-class>ru.intertrust.cm.core.gui.impl.server.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/remote/*</url-pattern>
    </filter-mapping>

</web-app>
