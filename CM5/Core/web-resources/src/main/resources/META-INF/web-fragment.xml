<web-fragment>
    <listener>
        <listener-class>ru.intertrust.cm.core.gui.impl.server.LogOutListener</listener-class>
    </listener>
    <listener>
        <listener-class>ru.intertrust.cm.core.gui.impl.server.CustomContextListener</listener-class>
    </listener>    
    <listener>
        <listener-class>ru.intertrust.cm.core.web.ActivitiContextListner</listener-class>
    </listener>
    <!--Export to CSV-->
    <!-- Uploader and Downloader part -->
    <servlet>
        <servlet-name>Spring Dispatcher</servlet-name>
        <servlet-class>ru.intertrust.cm.core.web.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:META-INF/dispatcherContext.xml</param-value>
        </init-param>
        <init-param>
            <param-name>PARENT_CONTEXT</param-name>
            <param-value>ear.context</param-value>
        </init-param>        
        <load-on-startup>1</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>Spring Dispatcher</servlet-name>
        <url-pattern>/attachment-upload</url-pattern>
        <url-pattern>/attachment-download</url-pattern>
        <url-pattern>/attachment-viewer-download</url-pattern>
        <url-pattern>/generate-report/*</url-pattern>
        <url-pattern>/json-export-to-csv/*</url-pattern>
        <url-pattern>/json-extended-search-export-to-csv/*</url-pattern>
        <url-pattern>/image-preview</url-pattern>
        <url-pattern>/ws/*</url-pattern>
    </servlet-mapping>

   <security-constraint>
        <display-name>Constraint</display-name>
        <auth-constraint>
            <description>
                CM5 protected web resources
            </description>
        </auth-constraint>
    </security-constraint>

    <filter>
        <display-name>LoginFilter</display-name>
        <filter-name>LoginFilter</filter-name>
        <filter-class>ru.intertrust.cm.core.gui.impl.server.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>gwtCacheControlFilter</filter-name>
        <filter-class>ru.intertrust.cm.core.gui.impl.server.GWTCacheControlFilter</filter-class>
    </filter>
    <!--filter>
        <filter-name>questionToHashFilter</filter-name>
        <filter-class>ru.intertrust.cm.core.gui.impl.server.QuestionToHashFilter</filter-class>
    </filter-->
    <filter>
        <filter-name>TicketFilter</filter-name>
        <filter-class>ru.intertrust.cm.core.gui.impl.server.CheckTicketFilter</filter-class>
    </filter>



    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/remote/*</url-pattern>
        <url-pattern>/attachment-download/*</url-pattern>
        <url-pattern>/attachment-viewer-download/*</url-pattern>
        <url-pattern>/attachment-upload</url-pattern>
        <url-pattern>/generate-report/*</url-pattern>
        <url-pattern>/json-export-to-csv/*</url-pattern>
        <url-pattern>/BusinessUniverse.html/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>gwtCacheControlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--filter-mapping>
        <filter-name>questionToHashFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping-->
    <filter-mapping>
        <filter-name>TicketFilter</filter-name>
        <url-pattern>/ws/*</url-pattern>
    </filter-mapping>
</web-fragment>