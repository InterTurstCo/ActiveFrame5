<arquillian xmlns="http://jboss.org/schema/arquillian"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <defaultProtocol type="Servlet 3.0" />
    <container qualifier="jbossas-managed">
        <configuration>
            <property name="jbossHome">${project.build.directory}/jboss-as-${jboss.version}</property>
            <property name="startupTimeoutInSeconds">800</property>
        </configuration>
    </container> 

     <container qualifier="jbossas-remote" default="true">
        <configuration>
            <property name="managementPort">9999</property>     
            <property name="managementAddress">localhost</property>     
        </configuration>
    </container>
