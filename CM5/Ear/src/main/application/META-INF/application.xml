<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://java.sun.com/xml/ns/javaee"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/application_6.xsd"
             version="6">
    <application-name>cm-sochi</application-name>
    <display-name>ear</display-name>
    <module>
        <web>
            <web-uri>web-app.war</web-uri>
            <context-root>/cm-sochi</context-root>
        </web>
    </module>
    <env-entries>
        <env-entry>
            <env-entry-name>search.solr.${search.solr.kind}</env-entry-name>
            <env-entry-type>java.lang.String</env-entry-type>
            <env-entry-value>${search.solr.setup}</env-entry-value>
        </env-entry>
    </env-entries>
</application>